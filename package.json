{
  "name": "@aluxion-nestjs/mongoose-crud-service",
  "displayName": "Mongoose CRUD Service",
  "version": "1.0.6",
  "description": "A customizable service that implements top level CRUD operations as well as one-level nested CRUD operations",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist/**/*"
  ],
  "author": {
    "email": "fsucre@aluxion.com",
    "name": "fsucre"
  },
  "license": "MIT",
  "scripts": {
    "build": "rimraf dist && tsc",
    "format": "prettier-tslint fix \"src/**/*.ts\"",
    "lint": "tslint -p tsconfig.json",
    "test": "jest --runInBand",
    "prepare": "npm run build",
    "preversion": "npm run lint && npm test",
    "version": "npm run format && git add -A src",
    "postversion": "git push && git push --tags"
  },
  "dependencies": {
    "@aluxion-nestjs/exceptions": "0.0.3",
    "@types/mongoose": "^5.5.17",
    "moment": "^2.24.0",
    "mongoose": "^5.7.0",
    "reflect-metadata": "^0.1.13"
  },
  "devDependencies": {
    "@types/faker": "^4.1.5",
    "@types/jest": "^24.0.18",
    "faker": "^4.1.0",
    "jasmine": "^3.4.0",
    "jest": "^24.8.0",
    "mongo-unit": "^1.4.5",
    "prettier": "^1.18.2",
    "prettier-tslint": "^0.4.2",
    "rimraf": "^3.0.0",
    "supertest": "^4.0.2",
    "ts-jest": "^24.0.2",
    "ts-loader": "^6.0.4",
    "ts-node": "^8.3.0",
    "tsconfig-paths": "^3.8.0",
    "tslint": "^5.18.0",
    "tslint-lines-between-class-members": "^1.3.4",
    "tslint-sonarts": "^1.9.0",
    "typescript": "^3.6.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
